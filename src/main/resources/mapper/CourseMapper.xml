<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ujs.trainingprogram.tp.dao.mapper.CourseMapper">

    <!-- 分页查询短链接 -->
    <select id="pageResult" parameterType="com.ujs.trainingprogram.tp.dto.req.course.CoursePageReqDTO"
            resultType="com.ujs.trainingprogram.tp.dao.entity.CourseDO">
        SELECT * FROM course
        WHERE del_flag = 0
        <if test="courseId != null">
            AND course_id = #{courseId}
        </if>
        <if test="courseCode != null and courseCode != ''">
            AND course_code = #{courseCode}
        </if>
        <if test="courseType != null">
            AND course_type = #{courseType}
        </if>
        <if test="courseCategory != null">
            AND course_category = #{courseCategory}
        </if>
        <if test="courseName != null and courseName != ''">
            AND course_name LIKE CONCAT('%', #{courseName}, '%')
        </if>
        <if test="collegeId != null and collegeId != ''">
            AND college_id = #{collegeId}
        </if>
        <if test="majorId != null and majorId != ''">
            AND major_id = #{majorId}
        </if>
        <if test="term != null">
            AND term = #{term}
        </if>
        ORDER BY create_time DESC
    </select>

</mapper>