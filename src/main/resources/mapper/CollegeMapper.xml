<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ujs.trainingprogram.tp.dao.mapper.CollegeMapper">

    <!-- 分页查询学院 -->
    <select id="pageResult" parameterType="com.ujs.trainingprogram.tp.dto.req.college.CollegePageReqDTO"
            resultType="com.ujs.trainingprogram.tp.dao.entity.CollegeDO">
        SELECT * FROM college
        WHERE del_flag = 0
        <if test="collegeId != null and collegeId != ''">
            AND college_id = #{collegeId}
        </if>
        <if test="collegeName != null and collegeName != ''">
            AND college_name LIKE CONCAT('%', #{collegeName}, '%')
        </if>
        ORDER BY create_time DESC
    </select>


</mapper>