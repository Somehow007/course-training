<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ujs.trainingprogram.tp.dao.mapper.CollegeMapper">

    <!-- 分页查询学院 -->
    <select id="pageCollegeResult" parameterType="com.ujs.trainingprogram.tp.dto.req.college.CollegePageReqDTO"
            resultType="com.ujs.trainingprogram.tp.dto.CollegePageMajorDTO">
        SELECT
            c.college_code,
            c.college_name,
            m.major_code,
            m.major_name,
            m.course_num,
            m.major_type
        FROM college c
        LEFT JOIN major m ON c.id = m.college_id AND m.del_flag = 0
        WHERE
            c.del_flag = 0
            <if test="requestParam.collegeCode != null and requestParam.collegeCode != ''">
                AND c.college_code = #{requestParam.collegeCode}
            </if>
            <if test="requestParam.collegeName != null and requestParam.collegeName != ''">
                AND c.college_name LIKE CONCAT('%', #{requestParam.collegeName}, '%')
            </if>
        ORDER BY c.create_time DESC
    </select>


</mapper>