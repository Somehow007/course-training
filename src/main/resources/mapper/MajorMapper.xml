<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ujs.trainingprogram.tp.dao.mapper.MajorMapper">

    <!-- 分页查询短链接 -->
    <select id="pageMajorResults" parameterType="com.ujs.trainingprogram.tp.dto.req.major.MajorPageReqDTO"
            resultType="com.ujs.trainingprogram.tp.dto.resp.major.MajorPageRespDTO">
        SELECT
            m.id,
            m.major_code,
            m.major_name,
            c.college_name,
            m.course_num,
            m.category_id,
            m.create_time,
            m.update_time
        FROM major m
        LEFT JOIN college c ON m.college_id = c.id AND c.del_flag = 0
        <where>
            m.del_flag = 0
            <if test="requestParam.majorName != null and requestParam.majorName != ''">
                AND m.major_name LIKE CONCAT('%', #{requestParam.majorName}, '%')
            </if>
            <if test="requestParam.majorCode != null and requestParam.majorCode != ''">
                AND m.major_code = #{requestParam.majorCode}
            </if>
            <if test="requestParam.categoryId != null">
                AND m.category_id = #{requestParam.categoryId}
            </if>
        </where>
        ORDER BY m.create_time DESC
    </select>

    <update id="incrementCourseNum">
        UPDATE major
        SET course_num = course_num + #{incrementNum}
        WHERE id = #{majorId}
    </update>

    <update id="decrementCourseNum">
        UPDATE major
        SET course_num = course_num - #{decrementNum}
        WHERE id = #{majorId}
    </update>

</mapper>